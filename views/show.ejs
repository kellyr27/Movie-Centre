<% layout('layouts/boilerplate') %>
<h1><%= movie.Title %> </h1>
<table class="table">
<% for (let i = 0; i < titles.length; i++) { %> 
    <tr>
        <th><%= titles[i] %> </th>
        <% if (titles[i] === "URL") { %>
            <td><a href="<%= movie[titles[i]] %>"><%= movie[titles[i]] %></a></td>
        <% } else { %> 
            <td><%= movie[titles[i]] %> </td>
        <% } %> 
    </tr>
<% } %> 
</table>
<div>
    <p><b><i>Appears in the following lists: </i></b></p>
    <ul class="list-group list-group-flush">
        <% for (let list of appearsInLists) { %> 
            <li class="list-group-item"><a href="/created_lists/<%= list['id'] %>"><%= list['listName'] %></a></li>
        <% } %> 
    </ul>

</div>
<a href="/movies">Back to Master List</a>